<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.plato">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".game.startPage.fragment.casual.CreateNewRoomActivity"></activity>
        <activity
            android:name=".game.startPage.StartGamePageActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".game.XOGamePageActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".Fragment.Chat.chatPage.ChatPageActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".setting.AboutUsActivity"
            android:theme="@style/noActionBarLight" />
        <activity
            android:name=".setting.SettingActivity"
            android:theme="@style/noActionBarLight" />
        <activity
            android:name=".profile.ProfileActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".entry.EntryActivity"
            android:theme="@style/NoActionBar" />
        <activity android:name=".entry.LoginPageActivity" />
        <activity android:name=".entry.RegisterPageActivity" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/NoActionBar" />
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".UserService" />
    </application>

</manifest>