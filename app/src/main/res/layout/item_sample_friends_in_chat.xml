<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv_chatFrag_recycleritem_cardView"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp">


        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:id="@+id/cv_chatFrag_recycleritem_imgcardView"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/iv_chatFrag_recycleritem_profImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/red"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_person_24dp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_chatFrag_recycleritem_friendName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="ali nooka"
            android:textStyle="bold"
            android:layout_toRightOf="@id/cv_chatFrag_recycleritem_imgcardView"
            android:textSize="17sp" />

        <TextView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_chatFrag_recycleritem_lastMessage"
            tools:text="last message"
            android:layout_below="@id/tv_chatFrag_recycleritem_friendName"
            android:layout_toRightOf="@id/cv_chatFrag_recycleritem_imgcardView"
            android:layout_marginLeft="8dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_chatFrag_recycleritem_lastMessageTime"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            tools:text="10:14 pm"/>
    </RelativeLayout>

    <View
        android:layout_width="300dp"
        android:layout_height="0.25dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="50dp"
        android:background="@color/blueGray" />

</androidx.cardview.widget.CardView>
