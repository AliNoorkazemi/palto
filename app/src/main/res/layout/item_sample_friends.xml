<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rv_friendFrag_itemSample_relative">

    <androidx.cardview.widget.CardView
        android:layout_width="40dp"
        android:id="@+id/cv_friendFrag_itemSample_photoContainer"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="20dp">

        <ImageView
            android:id="@+id/iv_friendFrag_itemSample_friendProf"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
             />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_friendFrag_itemSample_friendName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="ali nooka"
        android:textStyle="bold"
        android:layout_toRightOf="@id/cv_friendFrag_itemSample_photoContainer"
        android:textSize="17sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/cv_friendFrag_itemSample_photoContainer"
        android:background="@color/blueGray" />


</RelativeLayout>