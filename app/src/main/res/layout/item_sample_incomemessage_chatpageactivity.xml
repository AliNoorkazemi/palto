<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/income_message_boarder"
        android:text="income message"
        android:id="@+id/tv_itemInRecycler_incomeMessage_message"
        android:padding="8dp"
        android:layout_margin="8dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_itemInRecycler_incomeMessage_time"
        android:text="9:45 AM"
        android:layout_gravity="bottom"/>

</LinearLayout>